<!--index.wxml-->
<view class="page">
  <view class="page__hd">
    <text class="page__title">NavVis 客户提问系统</text>
  </view>
  <form class="page__bd" catchsubmit="formSubmit" catchreset="formReset">

    <view class="section">
      <view class="section__title">联系邮箱：</view>
      <input name="email" placeholder="您的邮箱地址／您注册在NavVis门户的邮箱" />
    </view>
  
    <view class="section">
      <view class="section__title">提问主题：</view>
      <input name="subject" placeholder="一句话概述" />
    </view>

    <view class="section">
      <view class="section__title">提问描述: </view>
      <textarea name="description" placeholder="具体的问题描述" />
    </view>

    <view class="btn-area">
      <button formType="submit">提交</button>
    </view>

    <!--<modal class="modal" hidden="{{confirmationModalHidden}}" no-cancel bindconfirm="confirmationModalChange">
      <view> 您即将提交的提问如下: </view>
      <view> 提问主题: {{subject}} </view>
      <view> 提问描述: {{descriptionl}} </view>
    </modal>-->

    <view wx:if="{{isAlert}}" style="position:fixed;margin: auto;left: 0;right: 0;top: 0;bottom: 0;width: 70%;height: 22%;background-color: rgba(66, 66, 66, 0.9); text-align: center;border-radius: 10rpx;z-index:9999">
      <icon type="{{iconType}}" color="White" size="45" style="margin-top:5%;"></icon>
      <view style="color:white; width:80%;margin-left:10%;margin-top:5%">
        {{alertLable}}
      </view>
    </view>

  </form>
</view>
