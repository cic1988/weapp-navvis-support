<!--index.wxml-->
<view class="page">

  <view class="page__hd">
  </view>

  <form class="page__bd" catchsubmit="formSubmit" catchreset="formReset">

    <view class="section">
      <view class="section__title">{{email_label}}</view>
      <input name="email" placeholder="{{email_placeholder}}" />
    </view>
  
    <view class="section">
      <view class="section__title">{{subject_label}}</view>
      <input name="subject" placeholder="{{subject_placeholder}}" />
    </view>

    <view class="section">
      <view class="section__title">{{description_label}}</view>
      <textarea name="description" placeholder="{{description_placeholder}}" />
    </view>

    <view class="btn-area">
      <button formType="submit">{{submitbtn_text}}</button>
    </view>

  </form>
</view>
